<project default="default" basedir=".">
    <property name="src" location="src"/>
    <property name="build" location="build"/>
    <property name="lib" location="lib"/>
    <property name="jar" location="OpenRSCSpriteTool.jar"/>
    <property name="javac.source" value="1.9"/>
    <property name="javac.target" value="1.9"/>

    <target name="default">
        <delete file="${jar}"/>
        <delete dir="${build}"/>
        <mkdir dir="${build}"/>
        <javac srcdir="${src}" destdir="${build}" debug="on" includeantruntime="false" target="${javac.target}" source="${javac.source}" modulepath="${lib}:${lib}/lib">
            <classpath>
    <pathelement location="${lib}/commons-io-2.6.jar"/>
    <pathelement location="${lib}/controlsfx-11.0.0.jar"/>
    <pathelement location="${lib}/fontawesomefx-8.9.jar"/>
    <pathelement location="${lib}/jackson-annotations-2.10.0.jar"/>
    <pathelement location="${lib}/jackson-core-2.10.0.jar"/>
    <pathelement location="${lib}/jackson-databind-2.10.0.jar"/>
    <pathelement location="${lib}/lib/javafx.base.jar"/>
    <pathelement location="${lib}/lib/javafx.controls.jar"/>
    <pathelement location="${lib}/lib/javafx.fxml.jar"/>
    <pathelement location="${lib}/lib/javafx.graphics.jar"/>
    <pathelement location="${lib}/lib/javafx.media.jar"/>
    <pathelement location="${lib}/lib/javafx.swing.jar"/>
    <pathelement location="${lib}/lib/javafx.web.jar"/>
    <pathelement location="${lib}/lib/javafx-swt.jar"/>
    <pathelement location="${lib}/jfoenix-9.0.9.jar"/>
    <pathelement location="${lib}/lib/javafx.properties"/>
            </classpath>
            <compilerarg line="-Xlint:deprecation"/>
        </javac>
        <jar basedir="${build}" destfile="${jar}">
            <zipgroupfileset dir="lib" includes="*.jar" />
            <manifest>
                <attribute name="Main-Class" value="com.OpenRSC.SpriteTool"/>
            </manifest>
        </jar>
        <delete dir="${build}"/>
    </target>
</project>
